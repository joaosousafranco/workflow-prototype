{
  "name": "workflow-prototype",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r run clean:build && pnpm -r run build && pnpm -r run lint",
    "build:local": "pnpm -r run clean:build && pnpm -r run build:local && pnpm -r run lint",
    "clean": "pnpm -r run clean; rm -rf node_modules",
    "clean:build": "pnpm -r run clean:build",
    "clean:production": "rm -rf node_modules && rm -rf packages/**/node_modules",
    "fix-install": "pnpm dedupe --force",
    "postinstall": "if [ -d .git ]; then git config core.hooksPath .githooks; fi",
    "lint": "pnpm -r run lint",
    "new-package:node": "./scripts/new-package-node.sh",
    "setup": "pnpm -r run clean && pnpm install --frozen-lockfile",
    "setup:clean": "pnpm -r run clean && rm -rf package-lock.json pnpm-lock.yaml && pnpm install",
    "test": "pnpm -r --sequential run test",
    "update-deps": "ncu -u && for f in packages/**; do cd $f && npx ncu -u && cd ../..; done"
  },
  "devDependencies": {
    "@types/node": "20.11.5",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "depcheck": "1.4.7",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unused-imports": "3.0.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "npm-check-updates": "16.14.12",
    "prettier": "3.2.4",
    "ts-jest": "29.1.1",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": "21.6.0",
    "npm": "10.2.4",
    "pnpm": "8.14.1"
  }
}
